<div class="row">
  <div class="col-md-6 col-md-offset-3 devise">
    <h2><b><%= t "devise.passwords.forgot_password" %></b></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
      <%= render "shared/errors_messages", object: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control item" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.passwords.send_reset_password"), class: "btn btn-primary button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
